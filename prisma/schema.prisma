model Cliente {
  id                String        @id @default(cuid())
  name              String
  contactEmail      String
  email             String
}

model Form {
  id                String        @id @default(cuid())
  name              String
  url               String
  tipo              String
  description       String
}

model Email {
  id                String        @id @default(cuid())
  clientEmail       String
  fileName          String
  subject           String
  content           String
  filePath          String
  deliveryStatus    String        @default("created")
  readStatus        Boolean       @default(false)
  responseStatus    Boolean       @default(false)
  error             String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  sentAt            DateTime?
  readAt            DateTime?
  responseAt        DateTime?
}
